#include "main.h"

/**
 * print_diagonal - draws a diagonal line in the terminal.
 * @n: number of times the character \ should be printed
 *
 * Return: 0 on Success
*/

void print_diagonal(int n)
{
	int i;

	if (n <= 0)
		_putchar('\n');
	else
	{
		for (i = 1; i <= n; i++)
		{
			if (i == n)
				_putchar('\');
			else
				_putchar(' ');
		}
		_putchar('\n');
	}
}
